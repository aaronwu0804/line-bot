    """é¦–é ï¼Œé¡¯ç¤ºç°¡å–®çš„æœå‹™è³‡è¨Š"""
    return jsonify({
        "service": "LINE Bot Webhook with Gemini AI",
        "version": "1.0.0",
        "status": "running"
    })

if __name__ == "__main__":
    # æœ¬æ©Ÿæ¸¬è©¦ç”¨ï¼Œå¯¦éš›éƒ¨ç½²æ™‚æ‡‰ä½¿ç”¨ WSGI ä¼ºæœå™¨
    port = int(os.environ.get('PORT', 5000))
    app.run(host='0.0.0.0', port=port)
